<table class="table table-striped table-bordered">
    <tr class="text-center">
        <th>ID</th>
        <th>Imagen</th>
        <th>Nombre para mostrar</th>
        <th>Nombre de usuario</th>
        <th>Población</th>
        <th>País</th>
        <th>Operaciones</th>
    </tr>
    {% for usuario in usuarios %}
    <tr class="text-center">
        <td>{{ usuario.id }}</td>
        <td>
            <img class="rounded" style="width: 150px" alt="Imagen de {{ usuario.displayname }}" title="Imagen de {{ usuario.displayname }}" src="{{ usuario.imagen ? path('pic_show', {'imagen': usuario.imagen}) : path('pic_show', {'imagen': 'default.jpg'}) }}">
        </td>
        <td><b>{{ usuario.displayname }}</b></td>
        <td>{{ usuario.username }}</td>
        <td>{{ usuario.city }}</td>
        <td>{{ usuario.country }}</td>
        <td>
            <a href="{{ path('user_show', {'id':usuario.id}) }}">
                <img height="20" width="20" alt="Detalles" title="Detalles" src="/images/buttons/show.png">
            </a>
            {% if is_granted('edit', usuario) %}
            <a href="{{ path('user_edit', {'id':usuario.id}) }}">
                <img height="20" width="20" alt="Editar" title="Editar" src="/images/buttons/update.png">
            </a>
            {% endif %}
            {% if is_granted('delete', usuario) %}
            <a href="{{ path('user_delete', {'id':usuario.id}) }}">
                <img height="20" width="20" alt="Eliminar" title="Eliminar" src="/images/buttons/delete.png">
            </a>
            {% endif %}
        </td>
    </tr>
    {% endfor %}
</table>